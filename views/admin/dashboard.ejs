<div class="admin-title">
    <div class="welcome-message">
        <h5>Hello <%= firstname %></h5>
    </div>
    <h2>Posts</h2>
    <a href="/add-post" class="button">+ Create New</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <h3>
                    <%= post.title %> &nearr;
                </h3>
            </a>

            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

                <% if (post.state === 'draft') { %>
                    <form action="/publish-post/<%= post._id %>" method="POST">
                        <input type="submit" value="Publish" class="btn ">
                    </form>
                <% } %>

                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn">
                </form>
            </div>
        </li>
    <% }) %>
</ul>

<% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
<% } %>
